generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id       Int    @id
    nickname String
    email    String

    session Session?

    // posts Post[]
}

model Session {
    userId      Int      @unique
    user        User     @relation(fields: [userId], references: [id])
    accessToken String
    expiresAt   DateTime @default(now())
}

